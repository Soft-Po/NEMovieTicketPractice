<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100px"
    android:background="@color/wihte">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="15px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/myActionbar_textCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32px"
            android:text="城市"/>
        <ImageView
            android:layout_marginLeft="5px"
            android:layout_width="18px"
            android:layout_height="11px"
            android:src="@mipmap/icon_arrow_down"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/myActionbar_tabLayout"
        android:layout_centerHorizontal="true"
        android:layout_width="350px"
        android:layout_height="match_parent">

    </android.support.design.widget.TabLayout>
    <ImageButton
        android:id="@+id/myActionbar_btnSearch"
        android:layout_width="80px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@color/transparent"
        android:src="@mipmap/icon_main_search"
        />
    <ImageButton
        android:id="@+id/myActionbar_btnChangeView"
        android:layout_toLeftOf="@id/myActionbar_btnSearch"
        android:layout_width="80px"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/transparent"
        android:src="@mipmap/icon_main_large_mode"
        />
</com.zhy.autolayout.AutoRelativeLayout>